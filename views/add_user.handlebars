<body>
<h2><p class="text-center">Добавление тренера</p></h2>
<div id="content">
    <form action="add_user/insert" method="post">
        <div class="container">

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>Логин и пароль</b></span>
                </div>
                <input type="text" aria-label="username" class="form-control" id="username" name="username" required>
                <input type="text" aria-label="password" class="form-control" id="password" name="password" required>
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><b>Имя и Фамилия</b></span>
                </div>
                <input type="text" aria-label="name" class="form-control"  id="name" name="name" required>
                <input type="text" aria-label="surname" class="form-control" id="surname" name="surname" required>
            </div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label for="role"><b>Роль в системе</b></label>
                        <select class="form-control" id="role" name="role">
                            <option value="trainer">Тренер</option>
                            <option value="user">Пользователь</option>
                        </select>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label for="phone"><b>Телефон</b></label>
                        <input type="text" class="form-control" id="phone" name="phone" required>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label for="date_of_birth"><b>День рождения</b></label>
                        <input type="text" class="form-control" id="date_of_birth" name="date_of_birth" required>
                        </div>
                    </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label for="ident"><b>Номер абонемента</b></label>
                        <input type="text" class="form-control" id="ident" name="ident" required>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label for="date_of_start"><b>Дата начала абонемента</b></label>
                        <input type="text" class="form-control" id="date_of_start" name="date_of_start" required>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label for="date_of_end"><b>День окончания абонемента</b></label>
                        <input type="text" class="form-control" id="date_of_end" name="date_of_end" required>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label for="select_trainer"><b>Тренер</b></label>
                        <select class="form-control" id="select_trainer" name="select_trainer" required>
                            {{# each listUser}}
                                <option value={{this.userid}}> {{this.name}} {{this.surname}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label for="select_abonement"><b>Абонемент</b></label>
                        <select class="form-control" id="select_abonement" name="select_abonement" required>
                            {{# each listShape }}
                                <option value={{this.shapeid }}> {{this.shapename}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-md-push-8">
                    <button type="submit" class="btn btn-info">Добавить пользователя</button>
                </div>
            </div>
        </div>
    </form>
</div>
</body>

