<body>
    <h1 style="text-align: center">Редактирование абонемента</h1>
        <form action="edit_abonements/update" method="post">
                <div class="container">
				{{# each items }}

                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label for="name"><b>Название</b></label>
                                <input type="text" placeholder="Название" class="form-control" id="shapename" name="shapename" value={{this.shapename}}>
                            </div>
                        </div>

                        <div class="col-4">
                            <div class="form-group">
                                <label for="cost"><b>Стоимость </b></label>
                                <input type="text" placeholder="Стоимость" class="form-control" id="shapecost" name="shapecost" value={{this.shapecost}}>
                            </div>
                        </div>
                    </div>
				{{/each}}
                    <div class="row">
                        <div class="col-md-4 col-md-push-8">
                            <button type="submit" class="btn btn-info">Изменить</button>
                            <input type="button" class="btn btn-info" onclick="history.back();" value="Назад"/>
                        </div>
                    </div>
                </div>

        </form>
</body>